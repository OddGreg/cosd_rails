<h1>Listing characters</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Group</th>
      <th>Name</th>
      <th>Biography</th>
      <th>Avatar</th>
      <th>Signature</th>
      <th>Title</th>
      <th>Tag line</th>
      <th>Slug</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.user %></td>
        <td><%= character.group %></td>
        <td><%= character.name %></td>
        <td><%= character.biography %></td>
        <td><%= character.avatar %></td>
        <td><%= character.signature %></td>
        <td><%= character.title %></td>
        <td><%= character.tag_line %></td>
        <td><%= character.slug %></td>
        <td><%= character.active %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

