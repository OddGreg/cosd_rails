<%- model_class = Character -%>
<div class="page-header">
  <h1><%=t '.title', :default => Character %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @character.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:biography) %></dt>
      <dd><pre class="prettyprint"><%= @character.biography %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:avatar) %></dt>
      <dd><pre class="prettyprint"><%= @character.avatar %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:signature) %></dt>
      <dd><pre class="prettyprint"><%= @character.signature %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @character.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tag_line) %></dt>
      <dd><pre class="prettyprint"><%= @character.tag_line %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:slug) %></dt>
      <dd><pre class="prettyprint"><%= @character.slug %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @character.active %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              characters_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_path(@character), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_path(@character),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

