<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :section %>
    <%= f.association :user %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :slug %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
