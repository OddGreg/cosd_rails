<h1>Listing genres</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Story</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Slug</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.category %></td>
        <td><%= genre.story %></td>
        <td><%= genre.title %></td>
        <td><%= genre.description %></td>
        <td><%= genre.image %></td>
        <td><%= genre.slug %></td>
        <td><%= genre.active %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path %>
